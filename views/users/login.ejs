<% layout("/layouts/boilerplate") %>

<div class="add-book-container" style="max-width: 500px; margin-top: 50px;">
    <h1 style="text-align: center; color: var(--primary); margin-bottom: 30px;">
        Login to MyBooks
    </h1>

    <form action="/login" method="POST" novalidate class="needs-validation">
        
        <div class="form-group">
            <label for="username">Username</label>
            <input 
                name="username" 
                id="username" 
                type="text" 
                class="form-control" 
                required 
            />
        </div>

        <div class="form-group">
            <label for="password">Password</label>
            <input 
                name="password" 
                id="password" 
                type="password" 
                class="form-control" 
                required 
            />
        </div>

        <button class="cta-button" style="width: 100%; margin-top: 10px;">
            Login
        </button>

    </form>
</div>